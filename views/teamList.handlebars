<div id="home">
  <div class="container">
    <div class = 'jumbotron'></div>
    <div class="row">
      <div class="col-8 offset-2">
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="teamData-name">TEAM NAME</label>
            <input type="text" id="teamData-name" class="form-control" aria-describedby="teamData-name" placeholder="Enter teamData Text">
          </div>
          <div class="form-group">
            <label for="teamData-description">TEAM DESCRIPTION</label>
            <textarea class="form-control" id="teamData-description" aria-describedby="teamData-description" placeholder="Enter teamData Description"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3 class='text-center'>LIST OF TEAMS</h3>
        <ul id="teamData-list" class="list-group">
          {{#each teamData}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="teamData/{{this.id}}">{{this.teamName}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>


      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
